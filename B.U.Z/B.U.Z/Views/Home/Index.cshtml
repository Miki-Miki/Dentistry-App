@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@*For refactoring*@

@if (User.IsInRole("Stomatolog"))
{
    <div class="container">
        <nav class="navbar navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item>">
                    <a asp-controller="Termini" asp-action="OtvoriKalendar" class="nav-link">Termini</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="Pacijenti" asp-action="Pacijenti" class="nav-link">Pacijenti</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="Dijagnoze" asp-action="Dijagnoze" class="nav-link">Dijagnoze</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="Recepti" asp-action="Recepti" class="nav-link">Recepti</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="Lijekovi" asp-action="Lijekovi" class="nav-link">Lijekovi</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="DentalnaPomagala" asp-action="DentalnaPomagala" class="nav-link">Dentalna pomagala</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="UserAccounts" asp-action="UserAccounts" class="nav-link">User Accounts</a>
                </li>
            </ul>
        </nav>
    </div>
}
else if (User.IsInRole("Asistent"))
{
    <div class="container">
        <nav class="navbar navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item>">
                    <a asp-controller="Termini" asp-action="OtvoriKalendar" class="nav-link">Termini</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="Pacijenti" asp-action="Pacijenti" class="nav-link">Pacijenti</a>
                </li>
                <li class="nav-item>">
                    <a asp-controller="DentalnaPomagala" asp-action="DentalnaPomagala" class="nav-link">Dentalna pomagala</a>
                </li>
            </ul>
        </nav>
    </div>
}
else if (User.IsInRole("Pacijent"))
{
    <div class="container">
        <nav class="navbar navbar-light">
            <ul class="navbar-nav">
                <li data-toggle="tooltip" title="Termini opis" class="nav-item>">
                    <a asp-controller="Termini" asp-action="OtvoriKalendar" class="nav-link">Termini</a>
                </li>
            </ul>
        </nav>
    </div>
}

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

