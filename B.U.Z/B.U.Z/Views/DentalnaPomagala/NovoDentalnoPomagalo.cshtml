@using B.U.Z.ViewModels;
@model NovoDentalnoPomagaloVM

<link href="~/css/Universal.css" rel="stylesheet" />
<link href="~/css/FormCss/manjeForme.css" rel="stylesheet" />
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script src="~/js/Validation/NovoDentalnoPomagalo.js"></script>
<div id="mainContainer">
    <div>
        <partial name="../Home/Index" />
    </div>
    <div id="MainPageBody">
        <div id="pageContent">
            <div id="partialNav">
                <partial name="DentalnaPomagalaPartial" />
            </div>

            <div id="ostatakBody-a" class="primarydark">
                <div id="formWrapper">
                    <form id="NovoDentalnoPomagalo" asp-action="SpasiNovoDentalnoPomagalo">
                        <div>

                            <label>Redni broj:</label>

                            <input type="text" value="@Model.BrojDentalnihPomagala" />
                        </div>
                        <div>

                            <label>Naziv dentalnog pomagala:</label>

                            <input type="text" asp-for="Naziv" />
                        </div>
                        <div>

                            <label>Opis dentalnog pomagala:</label>

                            <input type="text" asp-for="Opis" />
                        </div>
                        <div>

                            <label>Pacijent:</label>


                            <select asp-for="PacijentId" asp-items="@Model.pacijenti"></select>

                        </div>

                        <div>
                            <input type="submit" name="Spasi" value="Snimi" id="Dugme" style="margin-top:4%;"/>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
