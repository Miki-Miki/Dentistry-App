@using B.U.Z.ViewModels;
@model DentalnaPomagalaUrediVM
<div style="float:left; height:1000px; width:200px;">
    <partial name="../Home/Index" />
</div>
<h1>Dentalna pomagala</h1>
<div>
    <partial name="DentalnoPomagaloPartial" />
</div>
<div id="formaDiv">
    <form asp-action="SpasiNovoStaroDentalnoPomagalo">
        <div>
            <input type="hidden" asp-for="@Model.DentalnoPomagalo_Id" />
        </div>
        <div>
            <label>Redni broj</label>
            <input type="text" asp-for="@Model.RedniBroj" />
        </div>
        <div>
            <label>Naziv dentalnog pomagala</label>
            <input type="text" asp-for="@Model.Naziv" />
        </div>
        <div>
            <label>Opis detalnog pomagala</label>
            <input type="text" asp-for="@Model.Opis" />
        </div>
        <div>
            <label>Pacijent</label>
            <select asp-for="PacijentId" asp-items="@Model.pacijenti"></select>
        </div>
        <div>
            <input type="submit" name="Spasi" value="Snimi" />
        </div>
    </form>
</div>
<style>
    #formaDiv {
        color: white;
        background-color: #343a40;
        width: 80.6%;
        margin-left: 18.1%;
    }
</style>