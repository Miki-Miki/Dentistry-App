@{
   
}
@model Sesija;

<div id="main">
    <div id="header">
        <div id="pacijent">
            <div id="pacijentSlika"></div>
            <div id="pacijentInfo"></div>
        </div>
        <div id="logo"></div>
    </div>
    <div id="body">
        <div id="trenutniTremin"></div>
        <div id="sesijaInfo">
            <div id="navbar">
                <div class="container">
                    <nav id="SesijaNav" class="navbar navbar-light navbar-expand-sm">
                        <ul class="navbar-nav" style="margin-left:-1.5%;">
                            <li class="nav-item>" id="opcija">
                                <a class="nav-link navbar-light" style="color:white;" onclick="odaberiDijagnozu(@Model.Id)">Dijagnoza</a>
                            </li>
                            <li class="nav-item>" id="opcija">
                                <a class="nav-link" style="color:white;" onclick="odaberiTerapiju(@Model.Id)">Terapija</a>
                            </li>
                            <li class="nav-item>" id="opcija">
                                <a class="nav-link navbar-light" style="color:white;" onclick="odaberiLijek(@Model.Id)">Lijek</a>
                            </li>
                            <li class="nav-item>" id="opcija">
                                <a class="nav-link" style="color:white;" onclick="odaberiCTSnimak(@Model.Id)">CT snimak</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="ajaxPrikazOdabraneOpcije">

            </div>
            <div id="buttons">
                <form>
                        <input type="submit" name="Odustani" value="Odustani" class="btn"/>
                        <input type="submit" name="ZakaziNoviTermin" value="Zakazi novi termin" class="btn" />
                        <input type="submit" name="ZavrsiUslugu" value="Zavrsi uslugu"class="btn" />
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    function odaberiDijagnozu (sesija) {
        var url = "/Sesija/NovaDijagnoza?sesijaId=" + sesija;

        $.get(url, function (d) {
            $("#ajaxPrikazOdabraneOpcije").html(d);
        })
    }


    function odaberiTerapiju(sesija) {
        var url = "/Sesija/NovaTerapija?sesijaId=" + sesija;

        $.get(url, function (d) {
            $("#ajaxPrikazOdabraneOpcije").html(d);
        })
    }


    function odaberiLijek(sesija) {
        var url = "/Sesija/NoviLijek?sesijaId=" + sesija;

        $.get(url, function (d) {
            $("#ajaxPrikazOdabraneOpcije").html(d);
        })
    }


    function odaberiCTSnimak(sesija) {
        var url = "/Sesija/NoviCTSnimak?sesijaId=" + sesija;

        $.get(url, function (d) {
            $("#ajaxPrikazOdabraneOpcije").html(d);
        })
    }

</script>

<style>
    #main {
        background-color: #00A8A8;
        height: 100%;
        width: 100%;
    }
    #header {
        width: 100%;
        height: 200px;
        margin-left: auto;
        margin-right: auto
    }
    #sesijaInfo {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
        background-color: #0C6980;
    }
    .btn {
        background-color: #C4DBE0;
        color: #0C6980;
    }
    .navbar-nav:hover {
        cursor: pointer;
    }
    #opcija:active {
        background-color: #0C6980;
    }
</style>