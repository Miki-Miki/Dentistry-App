@using B.U.Z.ViewModels
@model AsistentRegistracijaVM
    <head>
        <link href="~/css/Universal.css" rel="stylesheet" />
        <link href="~/css/rounded-corners.css" rel="stylesheet" />
    </head>

    <div id="mainContainer">

        <div>
            <partial name="../Home/Index" />
        </div>
        <div id="MainPageBody">
            @*<h1 style="color: #0C6980">Novi user account za asistenta</h1>*@
            <div id="pageContent">
                <div id="partialNav">
                    <partial name="UserAccountsPartial" />
                </div>
                <div id="ostatakBody-a" class="rcMainBody">
                    <form asp-action="SpasiNoviAsistent" class="primarydark">
                        <div>
                            <label>First name:</label>
                            <input type="text" name="FirstName" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Last name:</label>
                            <input type="text" name="LastName" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div>
                            <label>E-mail:</label>
                            <input type="text" name="Email" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Broj telefona:</label>
                            <input type="text" asp-for="BrojTelefona" />
                        </div>
                        <div>
                            <label>Password:</label>
                            <input type="text" name="PasswordHash" />
                            <span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Spol:</label>
                            <select asp-for="SpolId" asp-items="Model.spolovi"></select>
                        </div>
                        <div>
                            <label>Grad:</label>
                            <select asp-for="GradId" asp-items="Model.gradovi"></select>
                        </div>
                        <div>
                            <label>Titula:</label>
                            <input type="text" name="Titula" />
                            <span asp-validation-for="@Model.Titula" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="submit" name="Spasi" value="Snimi" />
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
