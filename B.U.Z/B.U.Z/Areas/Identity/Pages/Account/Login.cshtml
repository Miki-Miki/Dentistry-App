@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";


}
<div style="padding-left:30%; padding-right:30%; padding-top:2%;">
    <div style="text-align:center;">
        <h1 style="color: #0C6980;">@ViewData["Title"]</h1>
    </div>
    <div class="row" style="margin-left:auto; margin-right:auto; width:100%;">
        <div style="width:100%;">
            <section>
                <form id="account" method="post">
                    <div style="text-align:center;">
                        <h4 style="color: #0C6980;">Prijavi se koristeći vlastiti korisnički nalog.</h4>
                        <hr />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>E-mail ili broj telefona</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Lozinka</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Input.RememberMe" />
                                Zapamti me?
                            </label>
                        </div>
                    </div>
                    <div class="form-group" style="text-align:center;">
                        <button type="submit" class="btn primarydark" style="margin-left:auto; margin-right:auto;">Prijavi se</button>
                    </div>
                    <div class="form-group" style="text-align:center;">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se kao novi korisnik</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
