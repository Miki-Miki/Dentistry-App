
@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";

}
<link rel="stylesheet" href="~/css/LoginRegister/main.css" />
<div id="registerDiv">
    <div style="text-align: center; color: #0C6980;">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div>
        <div style="width:100%;">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div style="text-align: center; color: #0C6980;">
                    <h4>Kreiraj novi korisnički nalog.</h4>
                </div>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Ime</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Prezime</label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Broj telefona</label>
                    <input asp-for="Input.BrojTelefona" class="form-control" />
                    <span asp-validation-for="Input.BrojTelefona" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Lozinka</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Potvrdi lozinku</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Datum rođenja</label>
                    <input style="width: 100%;padding: 7px; border: none;" type="date" asp-for="Input.GodinaRodjenja" />
                    <span asp-validation-for="Input.GodinaRodjenja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Spol">Spol</label>
                    <select style="width: 100%;padding: 7px;border: none;" asp-for="Input.Spol" asp-items="@Model.spolovi"></select>
                    @*<span asp-validation-for="Input.Spol" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="Input.Grad">Grad</label>
                    <select style="width: 100%;padding:7px; border:none;" asp-for="Input.Grad" asp-items="@Model.gradovi"></select>
                    @*<span asp-validation-for="Input.Spol" class="text-danger"></span>*@
                </div>
                <div style="text-align:center; color:white;">
                    <button style="color:white;" type="submit" class="btn primarydark">Registruj se</button>
                </div>
            </form>
        </div>
